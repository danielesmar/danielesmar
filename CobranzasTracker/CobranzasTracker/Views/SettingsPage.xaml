<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:CobranzasTracker.Core.ViewModel"
             x:Class="CobranzasTracker.Views.SettingsPage"
             x:DataType="pageModels:SettingsViewModel"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">

            <!-- Configuration Settings -->
            <Border BackgroundColor="{StaticResource Secondary}"
                    Padding="15"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Configuration"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Update Interval (minutes)" />
                        <Entry Text="{Binding UpdateInterval}"
                               Keyboard="Numeric"
                               Placeholder="Enter interval in minutes" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Active Time Range" />
                        <Entry Text="{Binding TimeRange}"
                               Placeholder="e.g., 08:00 - 17:00" />
                    </VerticalStackLayout>

                    <Button Text="Save Settings"
                            Command="{Binding SaveSettingsCommand}"
                            BackgroundColor="{StaticResource Primary}" />
                </VerticalStackLayout>
            </Border>

            <!-- Permissions Status -->
            <Border BackgroundColor="{StaticResource Tertiary}"
                    Padding="15"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Permissions Status"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*"
                          ColumnSpacing="10" RowSpacing="10">
                        <Label Grid.Column="0" Grid.Row="0" Text="GPS Permission" />
                        <Switch Grid.Column="1" Grid.Row="0"
                                IsToggled="{Binding GpsPermissionGranted}"
                                IsEnabled="False" />

                        <Label Grid.Column="0" Grid.Row="1" Text="Battery Optimization" />
                        <Switch Grid.Column="1" Grid.Row="1"
                                IsToggled="{Binding BatteryOptimizationDisabled}"
                                IsEnabled="False" />

                        <Label Grid.Column="0" Grid.Row="2" Text="Background Permission" />
                        <Switch Grid.Column="1" Grid.Row="2"
                                IsToggled="{Binding BackgroundPermissionGranted}"
                                IsEnabled="False" />

                        <Label Grid.Column="0" Grid.Row="3" Text="Start on Boot" />
                        <Switch Grid.Column="1" Grid.Row="3"
                                IsToggled="{Binding StartOnBootEnabled}"
                                IsEnabled="False" />
                    </Grid>

                    <Button Text="Request Permissions"
                            Command="{Binding RequestPermissionsCommand}"
                            BackgroundColor="{StaticResource Secondary}" />
                </VerticalStackLayout>
            </Border>

            <!-- Additional Actions -->
            <VerticalStackLayout Spacing="10">
                <Button Text="Open App Settings"
                        Command="{Binding OpenAppSettingsCommand}"
                        BackgroundColor="{StaticResource Tertiary}" />

                <Button Text="Test Notification"
                        Command="{Binding TestNotificationCommand}"
                        BackgroundColor="{StaticResource Primary}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>