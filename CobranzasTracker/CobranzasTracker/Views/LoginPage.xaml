<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:CobranzasTracker.Core.ViewModel"
             x:Class="CobranzasTracker.Views.LoginPage"
             x:DataType="pageModels:LoginViewModel"
             x:Name="OverviewPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Image Source="logo.png"
                   HeightRequest="100"
                   HorizontalOptions="Center" />

            <Label Text="Location Tracker"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <VerticalStackLayout Spacing="10">
                <Label Text="Username" />
                <Entry Text="{Binding Username}"
                       Placeholder="Enter your username" />

                <Label Text="Password" />
                <Entry Text="{Binding Password}"
                       Placeholder="Enter your password"
                       IsPassword="True" />
            </VerticalStackLayout>

            <!-- Mensaje de error -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                   HorizontalOptions="Center" />

            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White" />

            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>    