<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pageModels="clr-namespace:CobranzasTracker.Core.ViewModel"
             x:Class="CobranzasTracker.Views.DashboardPage"
             Title="Dashboard">
    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- User Info Section -->
                <Border BackgroundColor="{StaticResource Primary}"
                        Padding="15"
                        Stroke="Transparent"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Welcome"
                               TextColor="White"
                               FontSize="16" />
                        <Label Text="{Binding UserName}"
                               TextColor="White"
                               FontSize="20"
                               FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Border>

                <!-- Monitoring Status -->
                <Border BackgroundColor="{StaticResource Secondary}"
                        Padding="15"
                        Stroke="Transparent"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Monitoring Status"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Label Text="{Binding MonitoringStatus}"
                               FontSize="14" />
                        <Label Text="{Binding NextSendCountdown}"
                               FontSize="12"
                               TextColor="Gray" />
                    </VerticalStackLayout>
                </Border>

                <!-- System Status -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="*,*"
                      ColumnSpacing="10" RowSpacing="10">
                    <Border Grid.Column="0" Grid.Row="0"
                           BackgroundColor="{StaticResource Tertiary}"
                           Padding="12"
                           Stroke="Transparent"
                           StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="GPS Status" FontSize="12" />
                            <Label Text="{Binding GpsStatus}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="0"
                           BackgroundColor="{StaticResource Tertiary}"
                           Padding="12"
                           Stroke="Transparent"
                           StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Battery Level" FontSize="12" />
                            <Label Text="{Binding BatteryLevel, StringFormat='{0}%'}"
                                   FontSize="16"
                                   FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Use Grid.ColumnSpan instead of ColumnSpan -->
                    <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                           BackgroundColor="{StaticResource Tertiary}"
                           Padding="12"
                           Stroke="Transparent"
                           StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Last Notification" FontSize="12" />
                            <Label Text="{Binding LastNotification}"
                                   FontSize="14"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="*,*"
                      ColumnSpacing="10" RowSpacing="10">
                    <Button Grid.Column="0" Grid.Row="0"
                            Text="{Binding IsMonitoring, Converter={StaticResource MonitoringButtonTextConverter}}"
                            Command="{Binding ToggleMonitoringCommand}"
                            BackgroundColor="{StaticResource Primary}" />

                    <Button Grid.Column="1" Grid.Row="0"
                            Text="Send Now"
                            Command="{Binding SendManualLocationCommand}"
                            BackgroundColor="{StaticResource Secondary}" />

                    <Button Grid.Column="0" Grid.Row="1"
                            Text="Settings"
                            Command="{Binding OpenSettingsCommand}"
                            BackgroundColor="{StaticResource Tertiary}" />

                    <Button Grid.Column="1" Grid.Row="1"
                            Text="Logout"
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="Red" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>